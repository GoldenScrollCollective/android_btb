<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingVertical="8sp"
	android:paddingStart="0sp"
	android:paddingEnd="0sp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<androidx.cardview.widget.CardView
			android:layout_width="@dimen/_25sdp"
			android:layout_height="@dimen/_25sdp"
			android:background="@color/lightgrey"
			android:backgroundTint="@color/lightgrey"
			app:cardCornerRadius="@dimen/_6sdp"
			app:cardElevation="0dp">


			<ImageView
				android:id="@+id/avatarView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY" />

		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8sp"
			android:layout_weight="1"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#F0F0F0"
				android:orientation="vertical"
				android:padding="8sp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/userNameView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/urbanist_bold"
						android:singleLine="true"
						android:text="Sahil Bloom"
						android:textColor="@color/black"
						android:textSize="16sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/urbanist_medium"
						android:singleLine="true"
						android:text=" \u00b7 "
						android:textColor="@color/black"
						android:textSize="13sp" />

					<TextView
						android:id="@+id/agoView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:fadingEdge="horizontal"
						android:fontFamily="@font/urbanist_medium"
						android:singleLine="true"
						android:text="Sahil Bloom"
						android:textColor="@color/black"
						android:textSize="12sp" />

				</LinearLayout>

				<TextView
					android:id="@+id/commentView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5sp"
					android:fadingEdge="horizontal"
					android:fontFamily="@font/urbanist_medium"
					android:text="Comment text..."
					android:textColor="#424242"
					android:textSize="11sp"
					android:visibility="visible" />

			</LinearLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/btnLike"
					android:layout_width="36sp"
					android:layout_height="30sp"
					android:fontFamily="@font/urbanist_bold"
					android:gravity="center_vertical"
					android:text="Like"
					android:textColor="@color/black"
					android:textSize="12sp" />

				<TextView
					android:id="@+id/btnReply"
					android:layout_width="36sp"
					android:layout_height="30sp"
					android:layout_toEndOf="@id/btnLike"
					android:fontFamily="@font/urbanist_bold"
					android:gravity="center_vertical"
					android:text="Reply"
					android:textColor="@color/black"
					android:textSize="12sp" />

				<org.lemonadestand.btb.components.CommentReactionsView
					android:id="@+id/reactionsView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/_10sdp"
					android:layout_toEndOf="@id/btnReply" />

				<LinearLayout
					android:id="@+id/bonusView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:gravity="center_vertical">

					<ImageView
						android:id="@+id/bonusImageView"
						android:layout_width="@dimen/_12sdp"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:src="@drawable/ic_money" />

					<TextView
						android:id="@+id/bonusTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_3sdp"
						android:fontFamily="@font/urbanist_medium"
						android:text="0"
						android:textColor="@color/light_grey_ios"
						android:textSize="12sp" />

				</LinearLayout>

			</RelativeLayout>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/repliesRecyclerView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

		</LinearLayout>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>