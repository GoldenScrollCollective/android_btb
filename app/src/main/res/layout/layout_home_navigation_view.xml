<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:elevation="8dp"
	android:orientation="vertical"
	android:paddingHorizontal="16dp">

	<androidx.cardview.widget.CardView
		android:layout_width="42sp"
		android:layout_height="42sp"
		android:layout_marginTop="10dp"
		android:background="@color/lightgrey"
		android:backgroundTint="@color/lightgrey"
		app:cardCornerRadius="42sp"
		app:cardElevation="0dp">

		<ImageView
			android:id="@+id/navUserPicture"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY" />

	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/navUserName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="@font/urbanist_bold"
		android:text="Lee Guang"
		android:textSize="21sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/navOrgName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="@font/urbanist_semi_bold"
		android:text="Build then Bless Demo"
		android:textColor="@color/light_grey"
		android:textSize="14sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="5sp">

		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Total\nImpact"
				android:textAlignment="center"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/totalImpactView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="$0"
				android:textSize="24sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Pending\nExpenses"
				android:textAlignment="center"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/pendingExpensesView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="$0"
				android:textSize="24sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Lives\nBlessed"
				android:textAlignment="center"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/livesBlessedView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="0"
				android:textSize="24sp" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="5sp">

		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Recognized\nOthers"
				android:textAlignment="center"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/recognizedOthersView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="0"
				android:textSize="24sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Recognized\nby Others"
				android:textAlignment="center"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/recognizedByOthersView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="0"
				android:textSize="24sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Stories\nShared"
				android:textAlignment="center"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/storiesSharedView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5sp"
				android:fontFamily="@font/urbanist_bold"
				android:text="0"
				android:textSize="24sp" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="1sp"
		android:layout_marginTop="@dimen/_10sdp"
		android:layout_marginBottom="@dimen/_3sdp"
		android:background="@color/light_grey" />

	<LinearLayout
		android:id="@+id/navBtnTeam"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="@dimen/_7sdp">

		<ImageView
			android:layout_width="24sp"
			android:layout_height="24sp"
			android:src="@drawable/face_smile_hearts_regular"
			app:tint="@color/black" />

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15sp"
			android:layout_weight="1"
			android:fontFamily="@font/urbanist_semi_bold"
			android:text="Team"
			android:textColor="@color/black"
			android:textSize="16sp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/navBtnCompanies"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="@dimen/_7sdp">

		<ImageView
			android:layout_width="24sp"
			android:layout_height="24sp"
			android:src="@drawable/building_regular"
			app:tint="@color/black" />

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15sp"
			android:layout_weight="1"
			android:fontFamily="@font/urbanist_semi_bold"
			android:text="Companies"
			android:textColor="@color/black"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/navBtnContacts"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="@dimen/_7sdp">

		<ImageView
			android:layout_width="24sp"
			android:layout_height="24sp"
			android:src="@drawable/address_book_regular"
			app:tint="@color/black" />

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15sp"
			android:layout_weight="1"
			android:fontFamily="@font/urbanist_semi_bold"
			android:text="Contacts"
			android:textColor="@color/black"
			android:textSize="16sp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/navBtnLogout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingVertical="@dimen/_7sdp">

		<ImageView
			android:layout_width="24sp"
			android:layout_height="24sp"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_logout"
			app:tint="@color/black" />

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15sp"
			android:layout_weight="1"
			android:fontFamily="@font/urbanist_semi_bold"
			android:text="Logout"
			android:textColor="@color/black"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="1sp"
		android:layout_marginTop="@dimen/_3sdp"
		android:layout_marginBottom="@dimen/_10sdp"
		android:background="@color/light_grey" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="30sp"
			android:layout_height="30sp"
			android:src="@drawable/credit_card_regular"
			app:tint="@color/black" />

		<TextView
			android:id="@+id/debitCardBalanceView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="40dp"
			android:fontFamily="@font/urbanist_bold"
			android:text="$0"
			android:textSize="18sp"
			android:textStyle="bold" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView53"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_bold"
				android:text="Build Then Bless"
				android:textColor="@color/light_grey"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/textView54"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Card Balance"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="30sp"
			android:layout_height="30sp"
			android:src="@drawable/money"
			app:tint="@color/black" />

		<TextView
			android:id="@+id/navGiveView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="40dp"
			android:fontFamily="@font/urbanist_bold"
			android:text="$0"
			android:textSize="18sp"
			android:textStyle="bold" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_bold"
				android:text="Bonus Your Team"
				android:textColor="@color/light_grey"
				android:textSize="12sp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Available to Give"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="30sp"
			android:layout_height="30sp"
			android:src="@drawable/gift_card_regular"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/navSpendView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="40dp"
			android:fontFamily="@font/urbanist_bold"
			android:text="$0"
			android:textSize="18sp"
			android:textStyle="bold" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_bold"
				android:text="Spend On Yourself"
				android:textColor="@color/light_grey"
				android:textSize="12sp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/urbanist_semi_bold"
				android:text="Available to Redeem"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>

	<FrameLayout
		android:id="@+id/home_fragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:elevation="8dp" />

</LinearLayout>