<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    app:elevation="8dp"
    tools:context=".features.post.fragments.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="7dp"
        android:visibility="visible">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="32.5dp"
                android:layout_height="32.5dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="7dp"
                android:backgroundTint="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/userSortName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/navName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averiaseriflibre_regular"
                android:padding="7dp"
                android:text="Home"
                android:textColor="@color/btbOrange"
                android:textSize="35dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="100dp"
                    android:background="@drawable/tab_bg"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_public"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center"
                        android:text="Company" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_private"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center"
                        android:text="Community" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_mine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center"
                        android:text="Mine"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_archived"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center"
                        android:text="Archived"
                        android:visibility="gone" />

                </LinearLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="32.5dp"
                android:layout_height="32.5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/chevron_right_24"
                android:rotation="90"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_cn"
            android:elevation="8dp" />

    </RelativeLayout>

