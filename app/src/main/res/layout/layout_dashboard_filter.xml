<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingHorizontal="10sp"
    android:paddingVertical="4sp"
    android:elevation="8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:padding="2sp"
        android:background="@drawable/filter_group_bg">

        <org.lemonadestand.btb.components.FilterButton
            android:id="@+id/btnOrganization"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Stories"/>

        <org.lemonadestand.btb.components.FilterButton
            android:id="@+id/btnMine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mine"/>

        <org.lemonadestand.btb.components.FilterButton
            android:id="@+id/btnResource"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recognized"/>

        <org.lemonadestand.btb.components.FilterButton
            android:id="@+id/btnPublic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Default"
            app:selected="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>